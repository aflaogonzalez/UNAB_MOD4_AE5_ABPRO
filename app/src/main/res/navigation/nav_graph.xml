<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/headerFragment">

    <fragment
        android:id="@+id/headerFragment"
        android:name="cl.lte.ae5_abpro.Header"
        android:label="fragment_header"
        tools:layout="@layout/fragment_header">
        <action
            android:id="@+id/action_headerFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="cl.lte.ae5_abpro.Home"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">
        <argument
            android:name="search_term"
            app:argType="string" />
    </fragment>

</navigation>